<%= provide :title, "W.E Learning" %>
<%= render "shared/banner" %>

<div class="row">
  <% @newcourses.each_with_index do |crs, i| %>
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100">
        <%= image_tag crs.picture_url || "http://placehold.it/700x400",
        class: "d-block img-fluid", size: "700x400" %>
        <div class="card-body">
          <h4 class="card-title">
            <%= link_to crs.name, "#"  %>
          </h4>
          <h5><%= crs.price %></h5>
          <p class="card-text"><%= crs.description %></p>
        </div>
        <div class="card-footer">
          <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
        </div>
      </div>
    </div>
  <% end %>
</div>
