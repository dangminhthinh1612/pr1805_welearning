<fieldset>
  <div class="form-inline">
    <%= f.label :answer_title, "Cau tra loi" %>
    <%= f.text_area :answer_content, cols: 80, rows: 5, class: "form-control mb-2" %>
    <%= f.label :is_correct, class: "checkbox inline" do %>
      <%= f.check_box :is_correct, value: params[:question_id] %>
      <span>Right Answer</span>
    <% end %> &nbsp;
    <%= f.hidden_field :_destroy %> <br>
    <%= link_to "Remove", "#", class: "remove_answer" %>
  </div>
</fieldset>